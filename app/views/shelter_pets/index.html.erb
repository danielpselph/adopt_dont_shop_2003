<%= link_to "Add New Pet", "/shelters/#{@shelter.id}/pets/new", method: :get %>

<% @shelter.pets.each do |pet| %>
    <section id="pets-<%= pet.id %>">
        <h3>Name: <%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h3>
        <img style="width:40vw" src="<%= pet.image %>">
        <p>Age: <%= pet.age %></p>
        <p>Sex: <%= pet.sex %></p>
        <p>Description: <%= pet.description %></p>
        <p>Status: <%= pet.adoptable? %></p><hr>
    </section>
<% end %><br>